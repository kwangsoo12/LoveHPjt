<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.loveandheart.LH.dao.VideoDAO">
  <select id="mainVideo" resultType="com.loveandheart.LH.vo.VideoVO">
  	<![CDATA[
  		select c_video from (select c_video from content order by dbms_random.value)where rownum<2
  	]]>
  </select>
  <select id="getNowAddr" resultType="com.loveandheart.LH.vo.MainInfoVO">
  <![CDATA[
  		select c_addr,c_phone,c_open_hour from main where c_num = 1
  ]]>
  </select>
</mapper>